<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@color/color_greys_04_extralight_01_100"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/chat_overview_user_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/chat_overview_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/color_greys_01_dark_01_100"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/chat_overview_msg_time_tv"
            app:layout_constraintStart_toEndOf="@+id/chat_overview_user_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Emma Doe" />

        <TextView
            android:id="@+id/chat_overview_last_msg_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/color_greys_01_dark_01_100"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/chat_overview_msg_count_tv"
            app:layout_constraintStart_toStartOf="@id/chat_overview_username"
            app:layout_constraintTop_toBottomOf="@id/chat_overview_username"
            tools:text="Sounds awesome!" />

        <TextView
            android:id="@+id/chat_overview_msg_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/chat_overview_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/chat_overview_username"
            tools:text="19:23" />

        <TextView
            android:id="@+id/chat_overview_msg_count_tv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_primary_color"
            android:gravity="center"
            android:textColor="@color/color_greys_05_white_01_100"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/chat_overview_last_msg_tv"
            app:layout_constraintEnd_toEndOf="@+id/chat_overview_msg_time_tv"
            app:layout_constraintStart_toEndOf="@id/chat_overview_last_msg_tv"
            app:layout_constraintTop_toTopOf="@id/chat_overview_last_msg_tv"
            tools:ignore="SmallSp"
            tools:text="99" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>