<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feed.FeedFragment"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/storiesTitle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/stories"
        android:textColor="@color/color_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/storiesRV"
        android:layout_marginTop="18dp"
        android:paddingStart="16dp"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storiesRV"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:paddingStart="@dimen/base_grid_size"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storiesTitle"
        app:layout_constraintBottom_toTopOf="@+id/feedTitle"
        android:layout_marginBottom="@dimen/doub_grid_size"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/feedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/feed_title"
        android:textColor="@color/color_greys_01_dark_01_100"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storiesRV"
        app:layout_constraintBottom_toTopOf="@+id/feedSubTitle"
        android:layout_marginBottom="14dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"/>

    <TextView
        android:id="@+id/feedSubTitle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/feed_subtitle"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedTitle"
        app:layout_constraintBottom_toTopOf="@+id/feedsRV"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedsRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedSubTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="visible"/>

    <include layout="@layout/shimmer_feed"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedSubTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>